<h2 class = "text-center mt-4" >List of Secondary Stacks</h2><br>
<%= link_to "Add New Secondary Stack", new_secondary_tech_stack_path, class:"btn btn-secondary" %><br><br>

<table class = "table table-bordered">
  <thead class = "table-light text-center">
    <tr>
      <th> Stack </th>
      <th> Skills </th>
      <th> Generic Info </th>
      <th> Action </th>
    </tr>
  </thead>
  <tbody class = "text-center">
    <% @secondary_tech_stacks.each do |secondary| %>
      <tr>
        <td><%= secondary.stack %></td>
        <td><%= secondary.skills %></td>
        <td><%= secondary.generic_info %></td>
        <div>
          <td>
            <div class="btn-group" role="group">
              <%= link_to 'Show', secondary_tech_stack_path(secondary), class: "text-decoration-none btn btn-info" %>
              <%= link_to 'Edit', edit_secondary_tech_stack_path(secondary), class: "text-decoration-none btn btn-dark" %>
              <%= button_to 'Delete', secondary_tech_stack_path(secondary), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-danger" %>
            </div>
          </td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>
